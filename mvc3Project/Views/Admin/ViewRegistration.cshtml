@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using mvc3Project.Models
@model IEnumerable<Register>


<div class="container-fluid">
    <div class="row">
        <div class="col-12">

            <div class="card">
                <div class="card-header bg-primary">
                    <h3 class="card-title text-white">Registered Users</h3>
                </div>

                <div class="card-body">
                    <table class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Type</th>
                                <th>Status</th>
                                <th>Edit</th>
                            </tr>
                        </thead>
                        <tbody>
                            
                               @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Rid</td>
                                        <td>@item.Name</td>
                                    <td>@item.Type</td>
                                    <td>@item.Email</td>
                                    <td>@item.Status</td>
                                        <td><a asp-controller="Admin" asp-action="Approve" class="btn btn-primary" asp-route-id="@item.Rid">Approve</a></td>
                                    </tr>
                                }
                           
                            
                           
                        </tbody>
                    </table>
                </div>

            </div>

        </div>
    </div>
</div>
