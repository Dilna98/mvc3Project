@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


@model IEnumerable<ViewComplaint>

<div class="container-fluid">
    <div class="row">
        <div class="col-12">

            <div class="card">
                <div class="card-header bg-primary">
                    <h3 class="card-title text-white">View Complaints</h3>
                </div>

                <div class="card-body">
                    <table class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Name</th>
                                <th>Complaints</th>
                                <th>Replay</th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    @* <td>@item.Cid</td> *@
                                    <td>@item.Rid</td>
                                    <td>@item.Name</td>
                                    <td>@item.Complaint</td>

                                    <td><a asp-controller="Admin" asp-action="Replay" class="btn btn-primary" asp-route-id="@item.Cid">Replay</a></td>
                                </tr>
                            }



                        </tbody>
                    </table>
                </div>

            </div>

        </div>
    </div>
</div>

